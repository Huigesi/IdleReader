<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="10dp"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:id="@+id/item_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="TITLE"
                android:textColor="@color/text_common"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                >

                <TextView
                    android:id="@+id/tv_news_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="source"
                    android:textColor="@color/colorSubtitle"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_news_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999"
                    android:textColor="@color/colorSubtitle"
                    android:textSize="14sp" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_news_cover"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_extra_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="TITLE"
            android:textColor="@color/text_common"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/img_extra1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:layout_marginRight="1dp" />

            <ImageView
                android:id="@+id/img_extra2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:layout_marginRight="1dp" />

            <ImageView
                android:id="@+id/img_extra3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_extra_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="source"
                android:textColor="@color/colorSubtitle"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_extra_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999"
                android:textColor="@color/colorSubtitle"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_template"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_news_template"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_template_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_news_template"
            android:background="#34000000"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:typeface="serif" />

    </RelativeLayout>

</RelativeLayout>