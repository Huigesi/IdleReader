<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_nba_comment_user"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nba_comment_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="username"
                android:textColor="@color/text_common"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_nba_comment_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nba_comment_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:background="@color/colorLine"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_nba_comment_quote_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="quoteusername"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/wv_nba_detail_quote_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/colorLine"
            android:textColor="@color/colorSubtitle"
            android:paddingVertical="5dp"
            android:textSize="14sp"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/wv_nba_detail_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorTabText"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"></TextView>

    <LinearLayout
        android:id="@+id/ll_nba_comment_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/light" />

        <TextView
            android:id="@+id/tv_nba_comment_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99"
            android:textColor="@color/colorSubtitle"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>